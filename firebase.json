{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source":"*",
        "destination": "/index.html"
      },
      {
        "source":"/api/**",
        "destination": "api"
      },
      {
        "source":"!/@(api)/**",
        "destination": "/index.html"
      }
    ]
  }
}